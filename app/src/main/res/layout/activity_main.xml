<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Horizontal LinearLayout for Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <!-- Shuffle Button -->
        <Button
            android:id="@+id/shuffleE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shuffle"
            android:textAllCaps="false"
            android:contentDescription="Shuffle"
            android:drawableTop="@drawable/shuffle_icon"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/black"
            android:layout_marginEnd="16dp" />

        <!-- Favorite Button -->
        <Button
            android:id="@+id/favoriteE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite"
            android:textAllCaps="false"
            android:contentDescription="Favorite"
            android:drawableTop="@drawable/favourite_icon"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/black"
            android:layout_marginEnd="16dp" />

        <!-- Playlist Button -->
        <Button
            android:id="@+id/playlistE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist"
            android:textAllCaps="false"
            android:contentDescription="Playlist"
            android:drawableTop="@drawable/playlist_icon"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/black" />

    </LinearLayout>

    <!-- RecyclerView for Songs List  (Changed margin from 16 David)-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- TODO make this only show up when playing song maybe(David) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center">

        <!-- "Now PLaying" Text -->
        <TextView
            android:id="@+id/currentSong"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Now Playing" />

        <!-- Song name for progress -->
        <TextView
            android:id="@+id/songTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Song Selected"/>

        <!-- Song Progress TODO make functional (David)-->
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:minWidth="300dp"
            />

        <!-- Linear Layout for horizontal buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!--Previous Button -->
            <ImageView
                android:id="@+id/prev"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/prev_icon"
                android:contentDescription="@string/prev"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:layout_marginStart="8dp" />

            <!-- Start/Pause Button -->
            <ImageView
                android:id="@+id/pauseStart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/play_icon"
                android:contentDescription="@string/start"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:layout_marginStart="8dp" />

            <!-- Next Song Button (TODO link to current song)-->
            <ImageView
                android:id="@+id/next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/next_icon"
                android:contentDescription="@string/next"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>